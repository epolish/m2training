<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="content">
        <block name="product-qty-component" after="-" template="Training_Js::product/qty/js-layout.phtml">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="productQty" xsi:type="array">
                            <item name="component" xsi:type="string">Training_Js/js/product/view/qty</item>
                            <item name="config" xsi:type="array">
                                <item name="actionPath" xsi:type="string">training_js/product/qty</item>
                                <item name="template" xsi:type="string">Training_Js/product/view/qty</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
    <referenceContainer name="product.info.stock.sku">
        <block name="product-qty-template" after="-" template="Training_Js::product/qty/view.phtml"/>
    </referenceContainer>
</page>
